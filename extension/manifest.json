{
  "manifest_version": 3,
  "name": "Agent Runner (Live + Background)",
  "version": "0.1.0",
  "permissions": ["tabs", "scripting", "storage", "activeTab", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": {},
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "activate-copilot": {
      "suggested_key": { "default": "Ctrl+Shift+V", "mac": "Command+Shift+V" },
      "description": "Activate Vaulty Copilot"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.js", "mini-overlay.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://app.vaulty.ca/*",
      "https://*.vaulty.ca/*",
      "http://localhost:3001/*",
      "http://localhost:5173/*",
      "http://127.0.0.1:3000/*",
      "http://127.0.0.1:5173/*"
    ]
  }
}
